<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Owner.KelolaFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/kelola_hewan"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="Hewan" />
            <Button
                android:id="@+id/kelola_jenishewan"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="Jenis Hewan"/>

            <Button
                android:id="@+id/kelola_ukuranhewan"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="Ukuran Hewan"/>

            <Button
                android:id="@+id/kelola_customer"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="Customer" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/kelola_produk"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="Produk" />

            <Button
                android:id="@+id/kelola_layanan"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="Layanan" />

            <Button
                android:id="@+id/kelola_supplier"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="Supplier" />

            <Button
                android:id="@+id/kelola_pegawai"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="Pegawai" />
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>