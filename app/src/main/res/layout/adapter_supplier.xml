<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    android:layout_margin="8dp"
    android:id="@+id/ParentSupplier"
    android:background="@color/WhiteSmoke"
    tools:context=".Supplier.AdapterSupplier">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvJudulNamaSupplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Supplier : "
                android:textSize="14dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvNamaSupplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PT. Banana Mekar Sari"
                android:textColor="@color/Black"
                android:textSize="14dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="34dp">
            <TextView
                android:id="@+id/tvJudulNotelpSupplier"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="No.Telp : "
                android:textSize="14dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvNotelpSupplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="082227975222"
                android:textColor="@color/Black"
                android:textSize="12dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="39dp">
            <TextView
                android:id="@+id/tvJudulAlamatSupplier"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Alamat : "
                android:textSize="14dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvAlamatSupplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. Pisang No.999"
                android:textColor="@color/Black"
                android:textSize="12dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvJudulAksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aksi : "
                android:textSize="13dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tvAksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah / Edit"
                android:textSize="13dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvJudulAktorSupplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pelaku Terakhir : "
                android:textSize="12dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/tvAktor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Owner / CS"
                android:textSize="12dp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvJudulCreated_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dibuat : "
                android:textSize="7dp"/>
            <TextView
                android:id="@+id/tvCreated_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="created_at"
                android:textSize="7dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvJudulUpdated_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diupdate : "
                android:textSize="7dp"/>
            <TextView
                android:id="@+id/tvUpdated_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="updated_at"
                android:textSize="7dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvJudulDeleted_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dihapus : "
                android:textSize="7dp"/>
            <TextView
                android:id="@+id/tvDeleted_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="deleted_at"
                android:textSize="7dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>