<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UkuranHewan.EditUkuran">

    <TextView
        android:id="@+id/judulUpdateUkuran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:text="Ubah Ukuran Hewan" />

    <EditText
        android:id="@+id/etNamaUkuran_update"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judulUpdateUkuran"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Nama Ukuran Hewan" />
    <Button
        android:id="@+id/btn_Submit_update_Ukuran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNamaUkuran_update"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/WhiteSmoke"
        android:background="@drawable/roundedbutton"
        android:text="Submit"/>

</RelativeLayout>