<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_CS.Customer_RUDS.CreateCustomer">

    <TextView
        android:id="@+id/titleUbahCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Customer"
        android:textColor="@color/Black"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_margin="30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tambah_nama_customer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_below="@+id/titleUbahCustomer"
        android:layout_centerHorizontal="true">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Nama"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tambah_notelp_customer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_below="@+id/tambah_nama_customer"
        android:layout_centerHorizontal="true">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Nomor Telepon"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tambah_alamat_customer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_below="@+id/tambah_notelp_customer"
        android:layout_centerHorizontal="true">
        <com.google.android.material.textfield.TextInputEditText
            android:lines="4"
            android:maxLines="12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:hint="Alamat"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/linear_tambah_tgllahir"
        android:layout_below="@+id/tambah_alamat_customer"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/show_tgllahir_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="2000-01-01"
            android:textColor="@color/Black"/>

        <Button
            android:id="@+id/tambah_tgllahir_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundedbutton"
            android:drawableLeft="@drawable/icon_date"
            android:padding="5dp"
            android:text="Tanggal lahir"
            android:textColor="@color/White"
            android:textSize="10dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_tambah_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:text="SUBMIT"
        android:textColor="@color/White"
        android:layout_below="@+id/linear_tambah_tgllahir"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>